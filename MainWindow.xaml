<Window x:Class="SOSGameUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SOS Game" Height="400" Width="400">
    <StackPanel>
        <TextBlock Text="Choose Board Size" Margin="10"/>
        <TextBox x:Name="BoardSizeTextBox" Width="100" Margin="10"/>

        <TextBlock Text="Choose Game Mode" Margin="10"/>
        <RadioButton x:Name="SimpleRadioButton" Content="Simple" IsChecked="True" Margin="10"/>
        <RadioButton x:Name="GeneralRadioButton" Content="General" Margin="10"/>

        <Button x:Name="StartGameButton" Content="Start Game" Click="StartGame_Click" Margin="10"/>

        <TextBlock Text="Choose S or O" Margin="10"/>
        <ComboBox x:Name="LetterComboBox" Width="100" Margin="10">
            <ComboBoxItem Content="S"/>
            <ComboBoxItem Content="O"/>
        </ComboBox>

        <Grid x:Name="GameGrid" Margin="10"/>
    </StackPanel>
</Window>